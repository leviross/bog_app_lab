<h2>Add a new Creature</h2>

  <% if @creature.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@creature.errors.count, "error") %> prohibited
        this creature from being saved:
      </h2>
      <ul>
        <% @creature.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <%= bootstrap_form_for @creature do |f| %>
    <%= f.text_field :name, :placeholder => "Creature Name" %>
    <%= f.text_area :desc, :placeholder => "Describe your bog creature", class: "text-area" %>
    <%= f.collection_check_boxes :tag_ids, @tags, :id, :name %>
    <%= f.submit class: 'btn btn-primary' %>
  <% end %>


  <%= link_to "Back", creatures_path %>
